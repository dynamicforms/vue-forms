{
  "name": "@dynamicforms/vue-forms",
  "private": false,
  "version": "0.2.2",
  "type": "module",
  "description": "Data entry forms for vue - logic (no controls here)",
  "author": "Jure Erzno≈ænik",
  "files": [
    "dist/*"
  ],
  "main": "dist/dynamicforms-vue-forms.umd.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/dynamicforms-vue-forms.umd.cjs",
      "import": "./dist/dynamicforms-vue-forms.js"
    }
  },
  "workspaces": [
    "docs"
  ],
  "scripts": {
    "build": "vite build",
    "test": "vitest run --coverage",
    "lint": "eslint src && vue-tsc --noEmit",
    "docs:dev": "npm run docs:dev -w docs",
    "docs:build": "npm run docs:build -w docs",
    "docs:preview": "npm run docs:preview -w docs"
  },
  "keywords": [
    "vue",
    "dynamicforms",
    "velis",
    "forms",
    "data entry"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:velis74/dynamicforms-vue-forms.git"
  },
  "issues": "https://github.com/velis74/dynamicforms-vue-forms/issues",
  "peerDependencies": {
    "lodash-es": "^4.17.12",
    "vue": "^3.4"
  },
  "devDependencies": {
    "@types/lodash-es": "^4.17.12",
    "@vitejs/plugin-vue": "^5",
    "@vitest/coverage-v8": "^3",
    "@vue/test-utils": "^2.2.4",
    "@vue/tsconfig": "^0.7.0",
    "eslint-config-velis": "^1.1.16",
    "jsdom": "^26.0.0",
    "typescript": "^5",
    "vite": "^5",
    "vite-plugin-dts": "^4",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^3",
    "vue-tsc": "^2"
  },
  "eslintConfig": {
    "extends": [
      "velis"
    ],
    "ignorePatterns": [
      "dist/*",
      "coverage/*",
      "node_modules/*",
      "docs/*",
      "vite.config.ts"
    ]
  }
}
